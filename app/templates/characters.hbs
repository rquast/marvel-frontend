<div class="page__header--desktop show-for-medium-up">
  <div class="page__header-login-logout">
    <div class="row">
      <div class="large-12 column">
        <div class="row">
          <span class="page__header-greeting">Welcome,</span> <span class="page__header-user-name">Todo Sign-in</span> <a href="#" class="action action--circle action--logout right"><span class="icon icon-lock"></span></a>
        </div>
        <div class="row">
          <div class="page__header-page-title">
            <a href="#"><span class="icon icon-smile-o icon--prefix"></span>Characters</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="page__content">
  <div class="row">
    <div class="large-12 column">
      <div class="section__content">

        {{#each model as |character|}}
          <div>
            <img src={{character.thumbnail}}>
            ID: {{character.id}}<br>
            {{character.name}}<br>
            {{character.description}}
          </div>
        {{/each}}

        {{outlet}}

      </div>
    </div>
  </div>
</div>
